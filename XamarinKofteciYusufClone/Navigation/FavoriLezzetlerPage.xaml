             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinKofteciYusufClone.Navigation.FavoriLezzetlerPage">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
